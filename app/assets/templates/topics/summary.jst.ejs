<tr class="topic-summary">
  <td class="info">
    <div class="title">
      <h4>
        <a href="#topics/<%= topic.id %>">
          <%= topic.escape("title") %>
        </a>
      </h4>
    </div>
    <% if (topic.creator()) {%>
      <div class="creator">
        Started by
        <a href="<%= topic.creator().profilePath() %>">
          <%= topic.creator().get("name") %>
        </a>
      </div>
    <% } %>
    <% if (topic.lastPoster()) { %>
      <div class="last-poster">
        Last post by
        <a href="<%= topic.lastPoster().profilePath() %>">
          <%= topic.lastPoster().get("name") %>
        </a>
        (<time><%= jQuery.timeago(topic.lastPostTime()) %></time>)
      </div>
    <% } %>
  </td>
  <td class="num-replies">
    <span><%= topic.get("posts").length %></span>
    <br>
    <span>Posts</span>
  </td>
</tr>
