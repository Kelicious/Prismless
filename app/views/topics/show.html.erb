<article class="topic">
  <section class="title">
    <h2><%= @topic.title %></h2>
  </section>
  <%= paginate @posts %>
  <section class="posts">
    <%= render @posts %>
  </section>
  <%= paginate @posts %>
  <section class="reply">
    <%= render partial: 'posts/form', locals: {post: @topic.posts.new} %>
  </section>
  <%= link_to "Topic List", forum_topics_path(@topic.forum) %>
</article>
