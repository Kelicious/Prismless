<section class="forum">
  <h2><%= @forum.name %></h2>
  <%= link_to "New Topic", new_forum_topic_path(@forum) %>
  <%= paginate @topics %>
  <section class="topic-summaries">
    <table class="topic-summaries">
      <thead>
        <tr>
          <th>All Topics</th>
          <th>Replies</th>
        </tr>
      </thead>
      <tbody>
        <% @topics.each do |topic| %>
          <%= render partial: 'topics/summary', locals: {topic: topic} %>
        <% end %>
      </tbody>
    </table>
  </section>
</section>
