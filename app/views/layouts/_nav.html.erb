<section class="nav">
  <ul class="nav-links">
    <li><%= link_to community.name, community %></li>
    <% if defined?(forum) %>
      <span class="divider">/</span>
      <li><%= link_to forum.name, forum_topics_path(forum) %></li>
    <% end %>
    <% if defined?(topic) %>
      <span class="divider">/</span>
      <li><%= link_to topic.title, topic %></li>
    <% end %>
  </ul>
  <section class="favorite-button">
    <% if current_user.favorite_communities.include?(community) %>
      <%= link_to "Unfavorite", community_favorites_path(community), method: :delete %>
    <% else %>
      <%= link_to "Favorite", community_favorites_path(community), method: :post %>
    <% end %>
  </section>
</section>
