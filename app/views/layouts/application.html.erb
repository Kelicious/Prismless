<!DOCTYPE html>
<html>
<head>
  <title>Unprismatic</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%= render partial: 'layouts/header' %>
  <% if current_user && current_user.favorites.length > 0 %>
    <%= render partial: 'layouts/sidebar',
        locals: {communities: current_user.favorite_communities} %>
  <% end %>
  <div class="container">
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>"><%= value %></div>
    <% end %>
    <%= yield %>
  </div>
</body>
</html>
