<%= simple_form_for @forum  do |f| %>
  <%= f.error_notification %>
  <% if @forum.category && !(@forum.id) %>
    <%= f.hidden_field :category_id %>
  <% else %>
    <%= f.association :category, collection: @forum.community.categories, required: true %>
  <% end %>

  <div class="form-inputs">
    <%= f.input :name, required: true, autofocus: true %>
    <%= f.input :description, required: true, label: 'Short Description' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
