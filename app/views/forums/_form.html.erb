<%= simple_form_for([@category, @forum]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, required: true, autofocus: true %>
    <%= f.input :description, required: true, label: 'Short Description' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
