<%= simple_form_for(post, html: {class: "post-form"}) do |f| %>
  <%= f.error_notification %>
  <%= f.hidden_field :topic_id %>
  <%= f.input :body, as: :text, label: 'Post Content',
      input_html: {class: "tinymce"} %>
  <%= tinymce_assets %>
  <%= tinymce %>
  <%= f.submit "Submit" %>
<% end %>
